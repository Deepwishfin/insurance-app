<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientback"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/heading_back"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="3">


        <com.example.dialerapp.FontClasses.PopinsSemibold
            android:id="@+id/heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Lead Detail Page"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="22sp" />


    </LinearLayout>


    <com.example.dialerapp.FontClasses.PoppinsRegular
        android:id="@+id/loggedin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:drawableEnd="@drawable/ic_logout"
        android:drawablePadding="10dp"
        android:gravity="right"
        android:textAllCaps="true"
        android:textColor="#788691"
        android:textSize="16sp" />

    <com.example.dialerapp.FontClasses.PopinsSemibold
        android:id="@+id/lead_id_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffccff"
        android:padding="5dp"
        android:textColor="#707070"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearbottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.example.dialerapp.FontClasses.PopinsSemibold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="PERSONAL DETAILS"
                    android:textColor="#707070"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/offerlistimagebackground"
                    android:orientation="vertical"
                    android:padding="10dp"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="2"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights">

                            <EditText
                                android:id="@+id/first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#E2E2E2"
                                android:hint="First Name"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights">

                            <EditText
                                android:id="@+id/last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#E2E2E2"
                                android:hint="Last Name"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14dp">


                            </EditText>


                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="2"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights">

                            <EditText
                                android:id="@+id/email_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#E2E2E2"
                                android:hint="Email Address"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:inputType="textEmailAddress"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights">

                            <EditText
                                android:id="@+id/dob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#E2E2E2"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Date Of Birth"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:longClickable="false"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14dp">


                            </EditText>


                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights">

                            <EditText
                                android:id="@+id/phone_number"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="#E2E2E2"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Phone Number"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:maxLength="10"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.dialerapp.FontClasses.PoppinsRegular
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Marital Status"
                                android:textColor="#B0BAC9"
                                android:textSize="10sp" />


                            <Spinner
                                android:id="@+id/marital_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bg_spinner"
                                android:entries="@array/marital"
                                android:paddingRight="15dp"
                                android:popupBackground="#ffffff" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights">

                            <EditText
                                android:id="@+id/age"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="#E2E2E2"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Age"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="2"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14dp">


                            </EditText>


                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights">

                            <EditText
                                android:id="@+id/spouse_age"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="#E2E2E2"
                                android:hint="Spouse Age"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:inputType="number"
                                android:maxLength="2"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.dialerapp.FontClasses.PoppinsRegular
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No. Of Child"
                                android:textColor="#B0BAC9"
                                android:textSize="10sp" />


                            <Spinner
                                android:id="@+id/policy_term"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bg_spinner"
                                android:entries="@array/noofchild"
                                android:paddingRight="15dp"
                                android:popupBackground="#ffffff" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.example.dialerapp.FontClasses.PopinsSemibold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Premium Details"
                        android:textAllCaps="true"
                        android:textColor="#707070"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/offerlistimagebackground"
                    android:orientation="vertical"
                    android:padding="10dp"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="2"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.dialerapp.FontClasses.PoppinsRegular
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textColor="#B0BAC9"
                                android:textSize="10sp" />


                            <Spinner
                                android:id="@+id/gender_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bg_spinner"
                                android:entries="@array/gender"
                                android:paddingRight="15dp"
                                android:popupBackground="#ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.dialerapp.FontClasses.PoppinsRegular
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pre Existing Diseases"
                                android:textColor="#B0BAC9"
                                android:textSize="10sp" />


                            <Spinner
                                android:id="@+id/smoker_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bg_spinner"
                                android:entries="@array/disease_status"
                                android:paddingRight="15dp"
                                android:popupBackground="#ffffff" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="2"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.dialerapp.FontClasses.PoppinsRegular
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sum Assured"
                                android:textColor="#B0BAC9"
                                android:textSize="10sp" />


                            <Spinner
                                android:id="@+id/sum_assured"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bg_spinner"
                                android:paddingRight="15dp"
                                android:popupBackground="#ffffff" />
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights">

                            <EditText
                                android:id="@+id/deductible"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="#E2E2E2"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Deductible"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:maxLength="10"
                                android:text="0"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="2"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights">

                            <EditText
                                android:id="@+id/annual_income"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#E2E2E2"
                                android:hint="Annual Income"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:inputType="number"
                                android:maxLength="8"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights">

                            <EditText
                                android:id="@+id/alternate_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#E2E2E2"
                                android:hint="Pincode"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:inputType="number"
                                android:maxLength="6"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="2"
                        android:baselineAligned="false"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.dialerapp.FontClasses.PoppinsRegular
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Select Region"
                                android:textColor="#B0BAC9"
                                android:textSize="10sp" />


                            <Spinner
                                android:id="@+id/auto_state"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bg_spinner"
                                android:paddingRight="15dp"
                                android:popupBackground="#ffffff" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <com.example.dialerapp.FontClasses.PopinsSemibold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="LEAD DETAILS"
                    android:textColor="#707070"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/offerlistimagebackground"
                    android:orientation="vertical"
                    android:padding="10dp"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights">

                            <EditText
                                android:id="@+id/followup_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="#E2E2E2"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Follow Up Date"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:inputType="number"
                                android:maxLength="10"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.dialerapp.FontClasses.PoppinsRegular
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Contact Time"
                                android:textColor="#B0BAC9"
                                android:textSize="10sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <Spinner
                                    android:id="@+id/contact_time_hrs"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:entries="@array/hours"
                                    android:paddingRight="5dp"
                                    android:popupBackground="#ffffff" />

                                <Spinner
                                    android:id="@+id/contact_time_mn"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:entries="@array/minutes"
                                    android:paddingRight="5dp"
                                    android:popupBackground="#ffffff" />

                                <Spinner
                                    android:id="@+id/contact_time_ampm"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:entries="@array/ampm"
                                    android:paddingRight="5dp"
                                    android:popupBackground="#ffffff" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="2"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.dialerapp.FontClasses.PoppinsRegular
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Primary Feedback"
                                android:textColor="#B0BAC9"
                                android:textSize="10sp" />


                            <Spinner
                                android:id="@+id/primary_feedback_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bg_spinner"
                                android:paddingRight="15dp"
                                android:popupBackground="#ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.dialerapp.FontClasses.PoppinsRegular
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Secondary Feedback"
                                android:textColor="#B0BAC9"
                                android:textSize="10sp" />


                            <Spinner
                                android:id="@+id/secondary_feedback_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bg_spinner"
                                android:paddingRight="15dp"
                                android:popupBackground="#ffffff" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights">

                            <EditText
                                android:id="@+id/lead_source"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#E2E2E2"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Lead Source"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="10"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>


                </LinearLayout>


                <com.example.dialerapp.FontClasses.PopinsSemibold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="COMMENTS"
                    android:textColor="#707070"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/offerlistimagebackground"
                    android:orientation="vertical"
                    android:padding="10dp"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:baselineAligned="false"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights">

                            <EditText
                                android:id="@+id/wishfin_comments"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#E2E2E2"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Wishfin Comments"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights">

                            <EditText
                                android:id="@+id/agent_comments"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#E2E2E2"
                                android:hint="Agent Comments"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearbottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/call"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/roundedbuttongreen"
                android:gravity="center"
                android:text="Call"
                android:textColor="#fff"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/calculate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/roundedbuttongreen"
                android:gravity="center"
                android:text="Calculate Premium"
                android:textColor="#fff"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/roundedbuttongreen"
                android:gravity="center"
                android:text="Save"
                android:textColor="#fff"
                tools:ignore="MissingConstraints" />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>